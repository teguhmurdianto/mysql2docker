# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=your_database_name

# Docker Registry Configuration
DOCKER_USERNAME=your_dockerhub_username
DOCKER_PASSWORD=your_dockerhub_token_or_password
DOCKER_IMAGE_NAME=mysql-backup

# Optional: Custom tag (leave empty for auto timestamp)
# CUSTOM_TAG=production-backup

# Optional: TLS/SSL configuration (uncomment as needed)
# MYSQL_SSL_MODE=PREFERRED              # Options: VERIFY_IDENTITY, VERIFY_CA, PREFERRED, DISABLED
# MYSQL_SSL_CA=/etc/ssl/certs/mysql-ca.pem  # Path to CA certificate inside the container